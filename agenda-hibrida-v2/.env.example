# ==============================================
# CONFIGURAÇÃO DO SISTEMA HÍBRIDO DE AGENDA
# ==============================================

# Configurações do Servidor
PORT=3001
NODE_ENV=development
JWT_SECRET=agenda_hibrida_secret_key_2024

# ==============================================
# GOOGLE APIS - CALENDAR E DRIVE
# ==============================================

# Credenciais do Google Calendar e Drive API
GOOGLE_CLIENT_ID=seu_client_id_aqui.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=sua_chave_secreta_aqui
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# ==============================================
# CONFIGURAÇÃO DE ARMAZENAMENTO HÍBRIDO
# ==============================================

# Modo de armazenamento: local, qnap, gdrive, hybrid
STORAGE_MODE=hybrid

# Pasta local (Windows/Linux)
CLIENTS_FOLDER=C:\Tatuagens\Clientes
# Para desenvolvimento: ./uploads
# Para Linux: /home/usuario/Tatuagens/Clientes

# ==============================================
# CONFIGURAÇÃO QNAP NAS
# ==============================================

# Configurações do servidor QNAP
QNAP_HOST=192.168.1.100
QNAP_USERNAME=admin
QNAP_PASSWORD=sua_senha_qnap
QNAP_SHARE_PATH=/share/Tatuagens

# Porta da API do QNAP (geralmente 8080)
QNAP_API_PORT=8080

# ==============================================
# CONFIGURAÇÃO GOOGLE DRIVE
# ==============================================

# Pasta raiz no Google Drive para organização
GDRIVE_ROOT_FOLDER=Agenda_Tatuagem

# ==============================================
# CONFIGURAÇÕES DE UPLOAD
# ==============================================

# Tamanho máximo de arquivo (em bytes)
MAX_FILE_SIZE=52428800

# Tipos de arquivo permitidos
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,pdf,doc,docx,txt

# ==============================================
# CONFIGURAÇÕES DE BACKUP
# ==============================================

# Backup automático habilitado (true/false)
AUTO_BACKUP_ENABLED=true

# Horário do backup automático (formato cron)
BACKUP_SCHEDULE=0 2 * * *

# Pasta para backups locais
BACKUP_FOLDER=./backups

# Manter backups por quantos dias
BACKUP_RETENTION_DAYS=30

# ==============================================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# ==============================================

# WhatsApp Business API (opcional)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Email SMTP (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# ==============================================
# CONFIGURAÇÕES AVANÇADAS
# ==============================================

# Sincronização automática com Google Calendar (minutos)
SYNC_INTERVAL=15

# Compressão de imagens habilitada
IMAGE_COMPRESSION=true

# Qualidade padrão para thumbnails (1-100)
THUMBNAIL_QUALITY=80

# Tamanho máximo para thumbnails (pixels)
THUMBNAIL_MAX_SIZE=300

# ==============================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Habilitar logs detalhados
DEBUG_MODE=false

# Porta do frontend (para desenvolvimento)
FRONTEND_PORT=5173

# ==============================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ==============================================

# URL base da aplicação (para produção)
BASE_URL=https://sua-agenda.com

# Domínio permitido para CORS
CORS_ORIGIN=https://sua-agenda.com

# SSL habilitado (true/false)
SSL_ENABLED=false

# Certificados SSL (se habilitado)
SSL_CERT_PATH=
SSL_KEY_PATH=

# ==============================================
# CONFIGURAÇÕES ESPECÍFICAS PARA TATUADORES
# ==============================================

# Moeda padrão
DEFAULT_CURRENCY=BRL

# Fuso horário
TIMEZONE=America/Sao_Paulo

# Idioma padrão
DEFAULT_LANGUAGE=pt-BR

# Tipos padrão de tatuagem (JSON)
DEFAULT_TATTOO_TYPES=[{"name":"Pequena","duration":2,"price":200,"color":"#10B981"},{"name":"Média","duration":4,"price":400,"color":"#F59E0B"},{"name":"Grande","duration":6,"price":800,"color":"#EF4444"},{"name":"Sessão","duration":8,"price":1200,"color":"#8B5CF6"}]

# ==============================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ==============================================

# API de CEP (para endereços)
CEP_API_URL=https://viacep.com.br/ws

# API de pagamentos (opcional)
PAYMENT_API_URL=
PAYMENT_API_KEY=

# Google Analytics (opcional)
GA_MEASUREMENT_ID=

# ==============================================
# EXEMPLO DE CONFIGURAÇÃO COMPLETA
# ==============================================

# Para usar localmente:
# STORAGE_MODE=local
# CLIENTS_FOLDER=./uploads

# Para usar com QNAP:
# STORAGE_MODE=qnap
# QNAP_HOST=192.168.1.100
# QNAP_USERNAME=admin
# QNAP_PASSWORD=suasenha

# Para usar híbrido (recomendado):
# STORAGE_MODE=hybrid
# CLIENTS_FOLDER=C:\Tatuagens\Clientes
# QNAP_HOST=192.168.1.100
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...
