{
  "sync": {
    "enabled": true,
    "mode": "hybrid",
    "autoSync": true,
    "syncInterval": 300000,
    "watchLocalChanges": true,
    "conflictResolution": "manual"
  },
  "storage": {
    "primary": "local",
    "backup": ["google-drive"],
    "localPath": "./uploads",
    "qnapPath": null,
    "categories": [
      "referencias",
      "desenhos_aprovados",
      "fotos_finais",
      "outros"
    ]
  },
  "googleDrive": {
    "enabled": true,
    "uploadOnCreate": true,
    "downloadOnDemand": true,
    "maintainCache": true,
    "cacheMaxSize": 1073741824,
    "autoCleanup": true
  },
  "qnap": {
    "enabled": false,
    "mode": "future",
    "mountPoint": null,
    "sharePath": null,
    "notes": "QNAP será integrado no futuro. Local será a pasta de rede montada do QNAP."
  },
  "performance": {
    "maxConcurrentDownloads": 3,
    "maxConcurrentUploads": 2,
    "chunkSize": 5242880,
    "timeoutSeconds": 60
  },
  "monitoring": {
    "logLevel": "info",
    "enableWebSocket": true,
    "notifyOnConflict": true,
    "notifyOnSync": false
  },
  "ai": {
    "enabled": true,
    "mode": "auto",
    "primaryLLM": "claude-4.5-sonnet",
    "fallbackLLM": "claude-4.1-sonnet",
    "anthropic": {
      "apiKey": "ANTHROPIC_API_KEY",
      "model": "claude-3-5-sonnet-20241022",
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "features": {
      "autoCodeCompletion": true,
      "autoBugFixing": true,
      "autoDocumentation": true,
      "autoTesting": true,
      "autoRefactoring": true
    }
  }
}

