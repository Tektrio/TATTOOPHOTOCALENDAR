# Configuração NPM para o Frontend

# Força versão exata do Node.js especificada no package.json
engine-strict=true

# Salva versões exatas (sem ^ ou ~) quando instalar pacotes
save-exact=true

# Timeout aumentado para instalações lentas
fetch-timeout=60000

# Registro padrão do npm
registry=https://registry.npmjs.org/

# Desabilita telemetria do npm
fund=false
audit=true

# Configuração de cache
cache-min=3600

# Força reinstalação se integrity check falhar
integrity=true

# Configurações específicas do pnpm
# shamefully-hoist=true
# strict-peer-dependencies=false

