    "critical": [
      "01-navigation.spec.js",
      "02-clients.spec.js",
      "03-appointments.spec.js",
      "04-integration-flow.spec.js"
    ],
    "google": [
      "05-google-sync.spec.js",
      "11-google-drive-integration.spec.js"
